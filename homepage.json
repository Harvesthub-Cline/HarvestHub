  "auth": {
    "signup": {
      "title": "Start Your Gardening Journey",
      "subtitle": "Create your free account to access personalized garden plans and tutorials",
      
      "formFields": [
        {
          "name": "fullName",
          "label": "Full Name",
          "type": "text",
          "required": true,
          "placeholder": "Enter your full name"
        },
        {
          "name": "email",
          "label": "Email Address",
          "type": "email",
          "required": true,
          "placeholder": "you@example.com"
        },
        {
          "name": "password",
          "label": "Password",
          "type": "password",
          "required": true,
          "requirements": [
            "At least 8 characters",
            "One uppercase letter",
            "One number"
          ]
        },
        {
          "name": "confirmPassword",
          "label": "Confirm Password",
          "type": "password",
          "required": true
        }
      ],
      
      "onboardingQuestions": [
        {
          "question": "What type of space do you have for gardening?",
          "fieldName": "spaceType",
          "type": "radio",
          "options": [
            {"value": "balcony", "label": "Balcony or Patio"},
            {"value": "windowsill", "label": "Windowsill or Indoor"},
            {"value": "small_yard", "label": "Small Yard (under 100 sq ft)"},
            {"value": "community_plot", "label": "Community Garden Plot"},
            {"value": "rooftop", "label": "Rooftop Access"},
            {"value": "none_yet", "label": "No Space Yet - Just Learning"}
          ],
          "required": true
        },
        {
          "question": "How much sunlight does your space get daily?",
          "fieldName": "sunlightHours",
          "type": "radio",
          "options": [
            {"value": "full_sun", "label": "6+ hours (Full Sun)"},
            {"value": "partial_sun", "label": "4-6 hours (Partial Sun)"},
            {"value": "partial_shade", "label": "2-4 hours (Partial Shade)"},
            {"value": "full_shade", "label": "Less than 2 hours (Shade)"},
            {"value": "unknown", "label": "I'm not sure"}
          ],
          "required": true
        },
        {
          "question": "What's your primary gardening goal?",
          "fieldName": "gardeningGoal",
          "type": "checkbox",
          "options": [
            {"value": "food_security", "label": "Grow my own food"},
            {"value": "sustainability", "label": "Live more sustainably"},
            {"value": "health", "label": "Access to fresh, healthy produce"},
            {"value": "community", "label": "Connect with local gardeners"},
            {"value": "education", "label": "Learn gardening skills"},
            {"value": "relaxation", "label": "Gardening for stress relief"}
          ],
          "maxSelections": 3,
          "required": true
        },
        {
          "question": "What's your gardening experience level?",
          "fieldName": "experienceLevel",
          "type": "select",
          "options": [
            {"value": "complete_beginner", "label": "Complete Beginner"},
            {"value": "some_experience", "label": "Some Experience"},
            {"value": "intermediate", "label": "Intermediate Gardener"},
            {"value": "experienced", "label": "Experienced Gardener"}
          ],
          "required": true
        }
      ],
      
      "benefits": [
        "Personalized garden plans for your specific space",
        "Access to all tutorials and growing guides",
        "Progress tracking and garden journal",
        "Community forum and expert Q&A",
        "Seasonal planting reminders",
        "Free forever for basic features"
      ],
      
      "socialSignup": {
        "enabled": true,
        "providers": ["google", "facebook", "apple"],
        "privacyNote": "We never post to your social media without permission"
      },
      
      "termsAgreement": {
        "required": true,
        "termsLink": "/terms-of-service",
        "privacyLink": "/privacy-policy",
        "marketingConsent": false
      }
    },
    
    "login": {
      "title": "Welcome Back to HarvestHub",
      "subtitle": "Log in to access your garden dashboard and continue your growing journey",
      
      "formFields": [
        {
          "name": "email",
          "label": "Email Address",
          "type": "email",
          "required": true,
          "placeholder": "you@example.com"
        },
        {
          "name": "password",
          "label": "Password",
          "type": "password",
          "required": true
        },
        {
          "name": "rememberMe",
          "label": "Remember me",
          "type": "checkbox",
          "required": false
        }
      ],
      
      "recoveryOptions": [
        {
          "name": "forgotPassword",
          "label": "Forgot Password?",
          "link": "/forgot-password"
        },
        {
          "name": "resendConfirmation",
          "label": "Resend confirmation email",
          "link": "/resend-confirmation"
        }
      ],
      
      "socialLogin": {
        "enabled": true,
        "providers": ["google", "facebook", "apple"],
        "text": "Or continue with"
      },
      
      "noAccount": {
        "text": "Don't have an account yet?",
        "linkText": "Sign up for free",
        "link": "/signup"
      }
    },
    
    "userProfile": {
